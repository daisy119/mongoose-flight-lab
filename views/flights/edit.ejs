<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <h1><%= console.log('this is flight--->',flight) %></h1>

  <form id="new-form" action="/flights/<%= flight._id%>?_method=PUT" method="POST">

      <label for="airline-input">Airline:</label>
      <input type="text" value="<%= flight.airline %>" name="airline" id="airline-input">
      <label for="airport-select">Airport</label>
      <select name="airport" id="airport-select" >
        <option value="<%= flight.airport %>"><%= flight.airport %></option>
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN" >DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>
    <label for="flightno-input">Flight No:</label>
    <input type='number' value="<%= flight.flightNo %>" name="flightNo" id="flightno-input">
    <label for="departs-input">Departs:</label>
    <input type='datetime-local' value="<%= flight.departs.toISOString().slice(0, 16) %>"  name="departs" id="departs-input">
    <button type="submit">Save  FLight</button>
  </form>
</main>
<%- include("../partials/footer") %>